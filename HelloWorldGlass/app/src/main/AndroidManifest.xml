<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.helloworldglass">

    <!-- Permission for development voice commands (optional) -->
    <uses-permission android:name="com.google.android.glass.permission.DEVELOPMENT" />
    
    <!-- Declare that this app is for Glass -->
    <uses-feature
        android:name="android.hardware.type.glass"
        android:required="true" />

    <application
        android:allowBackup="true"
        android:icon="@android:drawable/ic_dialog_info"
        android:label="@string/app_name">
        
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:immersive="true"
            android:theme="@android:style/Theme.DeviceDefault">
            
            <!-- Main launcher intent -->
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            
            <!-- Voice trigger intent -->
            <intent-filter>
                <action android:name="com.google.android.glass.action.VOICE_TRIGGER" />
            </intent-filter>
            
            <!-- Voice trigger metadata -->
            <meta-data
                android:name="com.google.android.glass.VoiceTrigger"
                android:resource="@xml/voice_trigger" />
        </activity>
        
    </application>

</manifest>